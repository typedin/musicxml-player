{
  "name": "@music-i18n/musicxml-player",
  "version": "1.2.3",
  "description": "A TypeScript component that loads and plays MusicXML files in the browser using Web Audio and Web MIDI.",
  "types": "./build/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./build/musicxml-player.mjs",
      "types": "./build/types/index.d.ts"
    }
  },
  "files": [
    "build"
  ],
  "devDependencies": {
    "@chialab/esbuild-plugin-meta-url": "^0.19.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@esm-bundle/chai-as-promised": "^7.1.1",
    "@types/verovio": "^3.13.4",
    "@types/webmidi": "^2.1.0",
    "@vitest/ui": "^3.2.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-puppeteer": "^0.18.0",
    "esbuild": "^0.25.9",
    "esbuild-plugins-node-modules-polyfill": "^1.6.8",
    "eslint": "^9.13.0",
    "jsdom": "^27.0.0",
    "local-web-server": "^5.3.0",
    "sinon": "^19.0.2",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "test": "web-test-runner src/**/*.spec.js --node-resolve",
    "test:integration": "vitest src/__tests__/**/*.spec.js",
    "test:unit": "vitest src/**/*.test.ts",
    "test:ts": "vitest",
    "test:ts:ui": "vitest --ui",
    "test:ts:run": "vitest run",
    "test:lint": "eslint --fix src/**/*.ts",
    "build": "./apply-patches.sh && npm run build:esm && npm run build:cjs && npm run build:d.ts",
    "build:esm": "node esbuild.mjs --format=esm",
    "build:cjs": "node esbuild.mjs --format=cjs",
    "build:d.ts": "tsc --emitDeclarationOnly --outDir build/types",
    "demo:develop": "ws -d demo --rewrite '/mma/(.*) -> http://localhost:3000/$1' -p ${PORT:-8080}",
    "demo:server": "ws -d demo -p ${PORT:-8082} -z --log.format combined",
    "link": "run() { rm -rf node_modules/$1 && ln -s $(readlink -f $(npm root -g)/$1) node_modules/$1; }; run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infojunkie/musicxml-player.git"
  },
  "author": "Karim Ratib <karim.ratib@gmail.com> (https://github.com/infojunkie)",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/infojunkie/musicxml-player/issues"
  },
  "homepage": "https://github.com/infojunkie/musicxml-player#readme",
  "dependencies": {
    "opensheetmusicdisplay": "^1.7.1",
    "spessasynth_core": "^4.0.0",
    "spessasynth_lib": "^4.0.0",
    "unzipit": "^1.4.3",
    "verovio": "npm:@music-i18n/verovio@^1.0.0"
  }
}
